{
  "name": "brightness-restore",
  "version": "1.0.0",
  "description": "GNOME Shell extension to persist and restore software brightness across sessions.",
  "scripts": {
    "lint": "eslint extension .scripts --format stylish",
    "lint:fix": "eslint --fix extension .scripts --format stylish",
    "lint:status": "node .scripts/update-lint-status.js",
    "validate": "node .scripts/validate-build.js && node .scripts/scan-leaks.js",
    "package": "./package.sh",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DarkPhilosophy/brightness-restore.git"
  },
  "keywords": [
    "gnome",
    "extension",
    "brightness",
    "restore",
    "display"
  ],
  "author": "DarkPhilosophy",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.0.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.0"
  }
}
